<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/parent_no_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_marginStart="16dp"
        android:elevation="10dp"
        tools:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        tools:minHeight="200dp"
        android:orientation="vertical"
        android:padding="16dp">



        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oh_uh"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNoDataMsg"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/we_could_not_found_anything" />
    </LinearLayout>
</layout>